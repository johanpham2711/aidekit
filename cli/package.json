{
  "name": "aidekit-cli",
  "version": "1.0.0",
  "description": "CLI to install AI coding toolkit for modern IDEs",
  "type": "module",
  "bin": {
    "aidekit": "./dist/index.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "echo \"No tests yet\"",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "prepublishOnly": "npm run lint && npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "cursor",
    "claude",
    "windsurf",
    "commands",
    "rules",
    "skills",
    "agents",
    "ide",
    "toolkit"
  ],
  "author": "Johan Pham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/aidekit.git"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.1",
    "@types/prompts": "^2.4.9",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
